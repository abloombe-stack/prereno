{
  "package.json": {
    "name": "prereno",
    "version": "1.0.0",
    "description": "AI-powered home repair platform",
    "type": "module",
    "scripts": {
      "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
      "dev:client": "cd client && npm run dev",
      "dev:server": "cd server && npm run dev",
      "build": "npm run build:client && npm run build:server",
      "build:client": "cd client && npm run build",
      "build:server": "cd server && npm run build",
      "start": "cd server && npm start",
      "test": "npm run test:client && npm run test:server",
      "test:client": "cd client && npm run test",
      "test:server": "cd server && npm run test",
      "test:e2e": "cd e2e && npm run test",
      "lint": "npm run lint:client && npm run lint:server",
      "lint:client": "cd client && npm run lint",
      "lint:server": "cd server && npm run lint",
      "lint:fix": "npm run lint:client -- --fix && npm run lint:server -- --fix",
      "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
      "prepare": "husky install",
      "seed": "cd server && npm run seed",
      "migrate": "cd server && npm run migrate",
      "stripe:listen": "stripe listen --forward-to localhost:3001/api/webhooks/stripe"
    },
    "workspaces": [
      "client",
      "server",
      "e2e"
    ],
    "devDependencies": {
      "concurrently": "^8.2.2",
      "husky": "^8.0.3",
      "lint-staged": "^15.2.0",
      "prettier": "^3.1.1"
    },
    "lint-staged": {
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "prettier --write"
      ],
      "*.{json,css,md}": [
        "prettier --write"
      ]
    }
  },
  "client/package.json": {
    "name": "prereno-client",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
      "dev": "vite",
      "build": "tsc && vite build",
      "preview": "vite preview",
      "test": "vitest",
      "test:ui": "vitest --ui",
      "coverage": "vitest --coverage",
      "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
      "lint:fix": "eslint . --ext ts,tsx --fix"
    },
    "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-query": "^3.39.3",
      "@supabase/supabase-js": "^2.38.5",
      "@stripe/stripe-js": "^2.4.0",
      "@stripe/react-stripe-js": "^2.4.0",
      "zod": "^3.22.4",
      "react-hook-form": "^7.48.2",
      "@hookform/resolvers": "^3.3.2",
      "react-router-dom": "^6.20.1",
      "lucide-react": "^0.294.0",
      "date-fns": "^2.30.0",
      "react-hot-toast": "^2.4.1",
      "clsx": "^2.0.0",
      "tailwind-merge": "^2.2.0"
    },
    "devDependencies": {
      "@types/react": "^18.2.43",
      "@types/react-dom": "^18.2.17",
      "@typescript-eslint/eslint-plugin": "^6.14.0",
      "@typescript-eslint/parser": "^6.14.0",
      "@vitejs/plugin-react": "^4.2.1",
      "autoprefixer": "^10.4.16",
      "eslint": "^8.55.0",
      "eslint-plugin-react-hooks": "^4.6.0",
      "eslint-plugin-react-refresh": "^0.4.5",
      "postcss": "^8.4.32",
      "tailwindcss": "^3.3.6",
      "typescript": "^5.2.2",
      "vite": "^5.0.8",
      "vite-plugin-pwa": "^0.17.4",
      "vitest": "^1.0.4",
      "@vitest/ui": "^1.0.4",
      "jsdom": "^23.0.1",
      "@testing-library/react": "^14.1.2",
      "@testing-library/jest-dom": "^6.1.5",
      "@testing-library/user-event": "^14.5.1"
    }
  },
  "server/package.json": {
    "name": "prereno-server",
    "version": "1.0.0",
    "description": "PreReno API server",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
      "dev": "tsx watch src/index.ts",
      "build": "tsc",
      "start": "node dist/index.js",
      "test": "vitest",
      "test:watch": "vitest --watch",
      "coverage": "vitest --coverage",
      "lint": "eslint src --ext .ts",
      "lint:fix": "eslint src --ext .ts --fix",
      "seed": "tsx src/scripts/seed.ts",
      "migrate": "tsx src/scripts/migrate.ts"
    },
    "dependencies": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "express-rate-limit": "^7.1.5",
      "@supabase/supabase-js": "^2.38.5",
      "stripe": "^14.9.0",
      "zod": "^3.22.4",
      "jsonwebtoken": "^9.0.2",
      "multer": "^1.4.5-lts.1",
      "resend": "^2.1.0",
      "twilio": "^4.19.3",
      "openai": "^4.20.1",
      "dotenv": "^16.3.1"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/multer": "^1.4.11",
      "@types/node": "^20.10.4",
      "@typescript-eslint/eslint-plugin": "^6.14.0",
      "@typescript-eslint/parser": "^6.14.0",
      "eslint": "^8.55.0",
      "typescript": "^5.3.3",
      "tsx": "^4.6.2",
      "vitest": "^1.0.4",
      "supertest": "^6.3.3",
      "@types/supertest": "^6.0.2"
    }
  },
  "e2e/package.json": {
    "name": "prereno-e2e",
    "version": "1.0.0",
    "description": "End-to-end tests for PreReno",
    "scripts": {
      "test": "playwright test",
      "test:headed": "playwright test --headed",
      "test:ui": "playwright test --ui",
      "report": "playwright show-report",
      "install-deps": "playwright install"
    },
    "devDependencies": {
      "@playwright/test": "^1.40.1",
      "@types/node": "^20.10.4"
    }
  }
}